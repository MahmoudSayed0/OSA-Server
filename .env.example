# =====================================
# Safety Agent Environment Configuration
# =====================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =====================================
# Django Settings
# =====================================
# IMPORTANT: Generate a new secret key for production!
# You can use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-key-generate-a-new-one

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# =====================================
# PostgreSQL Database
# =====================================
POSTGRES_DB=oinride
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_PASSWORD_FLAT=your_secure_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Optional: Full connection string (overrides individual vars)
# PGVECTOR_CONNECTION=postgresql+psycopg2://user:pass@host:port/dbname

# =====================================
# Google AI (Gemini API)
# =====================================
# Get your key from: https://aistudio.google.com/
GOOGLE_API_KEY=your-google-ai-api-key

# =====================================
# Google OAuth (for login)
# =====================================
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# =====================================
# CORS (Frontend URLs)
# =====================================
# Comma-separated list of allowed origins
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
